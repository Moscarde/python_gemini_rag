GEMINI_API_KEY=coloque_sua_chave
GEMINI_GENERATION_MODEL=gemini-1.5-pro
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
EMBEDDING_DIM=3072

# Banco
PG_HOST=localhost
PG_PORT=5432
PG_DB=ragdb
PG_USER=postgres
PG_PASSWORD=postgres
# Alternativa: PG_DSN=postgresql+psycopg2://postgres:postgres@localhost:5432/ragdb

# Chunking
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Busca / RAG
TOP_K=5
MAX_CONTEXT_CHARS=16000

# Retry
RETRY_MAX=3
RETRY_BASE_DELAY=2.0

# Criar tabela automaticamente
AUTO_MIGRATE=1
